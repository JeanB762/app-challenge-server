{
    "openapi": "3.0.0",
    "info": {
        "title": "Tractian Challenge",
        "description": "Tractian challenge API",
        "version": "1.0.0",
        "contact": {
            "email": "jeanborges946@gmail.com"
        }
    },
    "paths": {
        "/assets": {
            "post": {
                "tags": [
                    "Assets"
                ],
                "summary": "Create a new asset",
                "description": "Create a new asset",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "owner": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Asset already exists"
                    }
                }
            },
            "get": {
                "tags": [
                    "Assets"
                ],
                "summary": "List all assets",
                "description": "List all assets",
                "responses": {
                    "200": {
                        "type": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                            "owner": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
